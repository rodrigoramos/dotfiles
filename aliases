alias icones="cd /usr/share/applications"

findc() 
{
  echo Find content in files \(Grep Wrapper\)
  echo

  if [ "$1" = "" ]; then
    echo ERROR: Please specify pattern to be found
    return 1
  fi

  if [[ "$1" =~ "help" ]]; then
    echo This is a simple wrapper for grep command to look into files
    echo
    echo USAGE: findc PATTERN \[directory\]
    echo
    echo "The command is: grep --exclude-dir={node_modules,dist} -rnw 'path' -e 'pattern to be found'"

    return 0
  fi
     
  grep --exclude-dir={node_modules,dist} -rnw ${2:-.} -e $1
}

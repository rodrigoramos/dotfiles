source ~/.vimrc

set surround
set multiple-cursors
set highlightedyank

" GoTo Impementation
nmap gD :action GotoImplementation<CR>

" Commentary that actually works on Rider
:map gcc <Action>(CommentByLineComment)
:map gc <Action>(CommentByBlockComment)

" Folding shortcuts
:map zr <Action>(RiderCollapseToDefinitions)
:map zc <Action>(CollapseRegion)
:map zo <Action>(ExpandRegion)

